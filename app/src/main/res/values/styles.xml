<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputEditText.ComboBox" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down_black_24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorHint">@color/defaultTextColor_800</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/colorBorder_800</item>
    </style>

    <style name="TextInputEditText.Editable" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/defaultTextColor_900</item>
    </style>

    <style name="TextInputEditText.Numeric.Editable" parent="@style/TextInputEditText.Editable">
        <item name="android:inputType">phone</item>
        <item name="android:digits">0123456789</item>
    </style>

    <style name="TextInputEditText.Alphabates.Editable" parent="@style/TextInputEditText.Editable">
        <item name="android:inputType">textShortMessage</item>
        <item name="android:digits">
            abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
        </item>
    </style>

    <style name="TextInputEditText.Decimal.Editable" parent="@style/TextInputEditText.Editable">
        <item name="android:inputType">phone</item>
        <item name="android:digits">0123456789.</item>
    </style>

</resources>